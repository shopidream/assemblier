{% comment %}
  App Contact Section
  Displays contact form
  License check: For business layout, disables form on EXPIRED
{% endcomment %}

<section class="app-contact" id="app-contact-{{ section.id }}" data-section-type="app-contact">
  <div class="app-contact__container">
    <h2 class="app-contact__title">{{ section.settings.contact_title }}</h2>
    <p class="app-contact__description">{{ section.settings.contact_description }}</p>

    {% form 'contact' %}
      {% if form.posted_successfully? %}
        <div class="app-contact__success">
          Thank you for contacting us. We'll get back to you as soon as possible.
        </div>
      {% endif %}

      {% if form.errors %}
        <div class="app-contact__errors">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div class="app-contact__form">
        <div class="app-contact__field">
          <label for="contact-name">Name *</label>
          <input type="text" id="contact-name" name="contact[name]" required>
        </div>

        <div class="app-contact__field">
          <label for="contact-email">Email *</label>
          <input type="email" id="contact-email" name="contact[email]" required>
        </div>

        <div class="app-contact__field">
          <label for="contact-phone">Phone</label>
          <input type="tel" id="contact-phone" name="contact[phone]">
        </div>

        <div class="app-contact__field">
          <label for="contact-message">Message *</label>
          <textarea id="contact-message" name="contact[body]" rows="5" required></textarea>
        </div>

        <button type="submit" class="app-contact__submit">Send Message</button>
      </div>
    {% endform %}
  </div>
</section>

<style>
  .app-contact {
    padding: 60px 20px;
    background-color: var(--skin-bg);
  }

  .app-contact__container {
    max-width: 600px;
    margin: 0 auto;
  }

  .app-contact__title {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 15px;
    color: var(--skin-primary);
  }

  .app-contact__description {
    text-align: center;
    margin-bottom: 40px;
    color: var(--skin-text);
  }

  .app-contact__success {
    padding: 15px;
    background-color: #d4edda;
    border: 1px solid #c3e6cb;
    color: #155724;
    border-radius: 4px;
    margin-bottom: 20px;
  }

  .app-contact__errors {
    padding: 15px;
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    color: #721c24;
    border-radius: 4px;
    margin-bottom: 20px;
  }

  .app-contact__form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .app-contact__field {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .app-contact__field label {
    font-weight: 500;
    color: var(--skin-text);
  }

  .app-contact__field input,
  .app-contact__field textarea {
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
    font-family: inherit;
  }

  .app-contact__field input:focus,
  .app-contact__field textarea:focus {
    outline: none;
    border-color: var(--skin-accent);
  }

  .app-contact__submit {
    padding: 15px 30px;
    background-color: var(--skin-accent);
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 1.1rem;
    font-weight: bold;
    cursor: pointer;
    transition: opacity 0.3s;
  }

  .app-contact__submit:hover {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .app-contact__title {
      font-size: 2rem;
    }
  }
</style>

<script>
  (function() {
    const section = document.getElementById('app-contact-{{ section.id }}');
    const apiUrl = '{{ section.settings.license_api_url | default: "https://assemblier-backend.onrender.com" }}';
    const shopDomain = window.Shopify ? window.Shopify.shop : '{{ shop.domain }}';

    // Check license status
    fetch(apiUrl + '/license/status?shopDomain=' + shopDomain)
      .then(response => response.json())
      .then(data => {
        if (data.status === 'EXPIRED' && data.layout === 'business') {
          // Disable form for business layout
          section.classList.add('app-contact--expired');
          const form = section.querySelector('.app-contact__form');
          const inputs = section.querySelectorAll('input, textarea');
          const button = section.querySelector('.app-contact__submit');

          if (form) form.classList.add('app-contact__form--disabled');
          inputs.forEach(input => input.disabled = true);
          if (button) button.style.display = 'none';
        }
      })
      .catch(error => {
        console.error('License check failed:', error);
        // Fail open: continue showing section normally
      });
  })();
</script>

{% schema %}
{
  "name": "App Contact",
  "settings": [
    {
      "type": "text",
      "id": "contact_title",
      "label": "Contact Title",
      "default": "Contact Us"
    },
    {
      "type": "textarea",
      "id": "contact_description",
      "label": "Contact Description",
      "default": "Have a question? We'd love to hear from you."
    },
    {
      "type": "text",
      "id": "license_api_url",
      "label": "License API URL",
      "default": "https://assemblier-backend.onrender.com"
    }
  ],
  "presets": [
    {
      "name": "App Contact"
    }
  ]
}
{% endschema %}
